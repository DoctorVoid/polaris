{
  "name": "@enigmatis/polaris",
  "version": "0.0.2",
  "description": "An express graphql js engine",
  "main": "./dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "build-watch": "tsc --watch -p tsconfig.json",
    "clean": "shx rm -rf node_modules/ dist/ docs/",
    "typedoc": "typedoc --out ./docs --mode modules --tsconfig ./tsconfig.json ./src/",
    "posttypedoc": "shx cp .nojekyll docs/.nojekyll",
    "buildDependents": "npm i && tsc && npm link",
    "prepare": "npm run lint:fix && npm run build",
    "lint": "npm run tslint-check && tslint -p .",
    "lint:fix": "npm run tslint-check && tslint -p . --fix",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yarinvak/polaris.git"
  },
  "keywords": [
    "polaris",
    "graphql"
  ],
  "author": "yarin vaknin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yarinvak/polaris/issues"
  },
  "homepage": "https://github.com/yarinvak/polaris#readme",
  "dependencies": {
    "@enigmatis/polaris-logs": "file:../polaris-logs",
    "@types/graphql": "^14.0.5",
    "@types/graphql-fields": "^1.3.0",
    "@types/node": "10.12.12",
    "apollo-server": "^2.3.2",
    "apollo-server-express": "^2.3.2",
    "cors": "^2.8.4",
    "express": "^4.16.4",
    "glob": "^7.1.2",
    "graphql": "^0.13.2",
    "graphql-fields": "^2.0.1",
    "graphql-middleware": "^3.0.1",
    "graphql-tools": "^4.0.4",
    "inversify": "^5.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "prettier": "^1.16.1",
    "rimraf": "^2.6.3",
    "shx": "^0.3.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-consistent-codestyle": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.2.4"
  }
}
